
@model IList<CaelumEstoque.Models.Produto>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nome</td>
                    <td>Quantidade</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td>@produto.Id</td>
                        <td>@produto.Nome</td>
                        <td>@produto.Quantidade</td>
                        <td>@Html.ActionLink(produto.Nome, "Visualiza", new { id = produto.Id })</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
